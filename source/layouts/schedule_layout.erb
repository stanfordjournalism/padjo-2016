<% wrap_layout :layout do %>
  <%= partial '/layouts/site_partials/header' %>

    <div class="container schedule-layout">
        <h1 class="site-title">
            <%=friendly_date page_date %>
        </h1>


        <section class="sec agenda">
            <h1>Agenda</h1>
            <% if (agenda = page_data_get(:agenda)) %>
                <% agenda.map{|a| contentresource(a) }.each do |item| %>
                    <div class="item">
                        <h4 class="title"><%=link_to item.title, item.url %></h4>
                        <div class="description">
                            <%=item.description %>
                        </div>

                    </div>

                <% end %>
            <% end %>

        </section>

        <section class="sec">
          <%= yield %>
        </section>

    </div>

  <%= partial '/layouts/site_partials/footer' %>
<% end %>
